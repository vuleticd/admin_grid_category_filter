<config>
    <modules>
        <Vuleticd_AdminGridCategoryFilter>
            <version>0.0.0.2</version>
        </Vuleticd_AdminGridCategoryFilter>
    </modules>
    <global>
		<models>
			<admingridcategoryfilter>
    			<class>Vuleticd_AdminGridCategoryFilter_Model</class>
			</admingridcategoryfilter>
		</models>
		<helpers>
			<admingridcategoryfilter>
				<class>Vuleticd_AdminGridCategoryFilter_Helper</class>
			</admingridcategoryfilter>
		</helpers>
		<blocks>
			<admingridcategoryfilter>
				<class>Vuleticd_AdminGridCategoryFilter_Block</class>
			</admingridcategoryfilter>
		</blocks>
	</global>
    <adminhtml>
    	<events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <admingridcategoryfilter>
                        <class>admingridcategoryfilter/observer</class>
                        <method>addCategoryFilterToProductGrid</method>
                    </admingridcategoryfilter>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
</config>
